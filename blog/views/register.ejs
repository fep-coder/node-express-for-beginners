<%- include('_layouts/header'); -%>


    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">

            <% if (errors != null && errors.length > 0) { %>
                <ul class="list-group">
                <% for (let i=0; i < errors.length; i++) { %>
                    <li class="list-group-item list-group-item-danger">
                        <%= errors[i] %>
                    </li>
                <% } %>
                </ul>
            <% } %>

            <h1>Register</h1>

            <form method="post" action="/users/register">
                <div class="form-group pt-3">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="<%= username %>"></input>
                </div>
                <div class="form-group pt-3">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" value="<%= password %>"></input>
                </div>
                <button type="submit" class="btn btn-primary mt-4" id="addPost">Register</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>


    <%- include('_layouts/footer'); -%>