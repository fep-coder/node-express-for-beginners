<%- include('_layouts/header'); -%>

    <h1>Home page</h1>

    <div class="row">

        <% for (let i=0; i < posts.length; i++) { %>

            <div class="col-6">

                <div class="card">
                    <img class="card-img-top img-fluid" src="/images/<%= posts[i].image %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= posts[i].title %>
                        </h5>
                        <p class="card-text">
                            <%- posts[i].body %>
                        </p>
                        <p>
                            Posted by: <%= posts[i].userid.username %>
                            <br>
                            on <%= posts[i].datePosted.toDateString() %>
                        </p>
                        <a href="/post/<%= posts[i]._id %>" class="btn btn-primary">Go to post</a>
                    </div>
                </div>
            </div>

            <% } %>
    </div>

    <%- include('_layouts/footer'); -%>