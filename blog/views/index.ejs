<%- include('_layouts/header'); -%>

<h1>Home page</h1>

<% for (let i = 0; i < posts.length; i++) { %>

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">
            <%= posts[i].title %>
        </h5>
        <p class="card-text">
            <%= posts[i].body %>
        </p>
        <a href="/post/<%= posts[i]._id %>" class="btn btn-primary">Go to post</a>
    </div>
</div>

<% } %>

<%- include('_layouts/footer'); -%>